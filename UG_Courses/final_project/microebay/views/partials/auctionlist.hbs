<div id="auctions">
  <div id="auction-list">
    {{#if auction_list}} {{#each auction_list}}
    <div id="{{this.id}}" class="auction">
      <img src="{{this.image}}" width="150" height="150">
      <div id="auction-description">
        <h2>{{this.name}}</h2>
        <p>{{this.description}}</p>
      </div>
      <div id="auction-actions">
        <div id="auction-status">
          Auction status:<br/>{{this.state}}
        </div>
        <div id="auction-details" data-id="{{this.id}}">
          Details
        </div>
        <div id="bid-text">
          Current bid:<br/>{{this.bid}}
        </div>
      </div>
    </div>
    {{/each}} {{else}}
    <div id="empty">
      Nothing to show.
    </div>
    {{/if}}
  </div>
  {{#if is_logged}}
  <div id="add-auction">
    +
  </div>
  {{/if}}
</div>