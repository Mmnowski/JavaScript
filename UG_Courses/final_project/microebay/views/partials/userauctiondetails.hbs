<div id="auction-info">
  {{#if auction}}
  <div id="main-info">
    <div id="auction-title">
      {{auction.name}}
    </div>
    <img src="{{auction.image}}" width="250" height="250">
  </div>
  <div id="detailed-info">
    <div id="auction-description">
      {{auction.description}}
    </div>
    <div id="bidding-info">
      Current bid: {{auction.bid}}
      <form method="POST" action="/profile/current/{{auction.id}}">
        <div id="formgroup">
          <input type="number" id="bid-form" placeholder="0" step="0.01" min="1" name="bid">
        </div>
        <button type="submit" id="bid-button" data-auc="{{auction.id}}">Bid</button>
      </form>{{#if is_bidable}} Buy now for {{auction.buynowprice}}:
      <form method="POST" action="/profile/current/{{auction.id}}">
        <button type="submit" id="buy-button" data-id="{{auction.buynowprice}}" data-auc="{{auction.id}}">Buy</button>
      </form>
      <div id="auction-contact" data-id="{{auction.owner}}">
        Message owner
      </div>
      {{/if}}
    </div>
  </div>
  {{else}} Something went wrong {{/if}}
</div>